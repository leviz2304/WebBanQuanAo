@model CheckoutViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Checkout";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <!-- Contact and Delivery Details -->
            <h2>Contact Details</h2>
            <form asp-action="Checkout" method="post">
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Contact Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <h2>Delivery Address</h2>
                <div class="mb-3">
                    <label asp-for="ShippingAddress" class="form-label">Address Line 1</label>
                    <input asp-for="ShippingAddress" class="form-control" />
                    <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                </div>
                <!-- Additional Address Fields as necessary -->
                <div class="mb-3">
                    <label asp-for="Notes" class="form-label">Notes (Optional)</label>
                    <textarea asp-for="Notes" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Place Order</button>
            </form>
        </div>

        <div class="col-md-6">
    <!-- Summary -->
    <h2>Summary</h2>
    <div class="border p-3 mb-3">
        @foreach (var item in Model.Cart.Items)
        {
            <div class="d-flex justify-content-between mb-1">
                <div class="d-flex align-items-center">
                    <img src="@item.ImageUrl" alt="@item.Name" style="width:50px; height:auto; margin-right:10px;">
                    <div>
                        <div>@item.Name (@item.Quantity)</div>
                        <div>@item.Price.ToString("C")</div>
                    </div>
                </div>
            </div>
        }
        <hr>
        <div class="d-flex justify-content-between">
            <span>Subtotal</span>
            <span>@Model.Subtotal.ToString("C")</span>
        </div>
        <div class="d-flex justify-content-between mt-2">
            <span>Total (excl. delivery)</span>
            <span>@Model.Subtotal.ToString("C")</span>
        </div>
        <!-- Additional Summary Items -->
    </div>
</div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model IEnumerable<WebBanHangLapTop.Models.Product>
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Home Page";
}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://i8.amplience.net/i/jpl/desktop-top-banner-1920x840-70-f3446f09e4b675c8f0325424c08ceaf5?qlt=800&fmt=auto" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://i8.amplience.net/i/jpl/desktop-top-banner-1920x840-58-b69c26a9da1ff4c285e1615d1a932a91?qlt=800&fmt=auto" class="d-block w-100" alt="...">
        </div>

    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<section class="py-2 text-decoration-none">
    <div class="container px-4 px-lg-5 mt-5 text-decoration-none">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <a class="text-decoration-none text-black" asp-action="Display" asp-controller="Home" asp-route-id="@item.Id">
                    <div class="col mb-5 text-decoration-none">
                        <div class="card gap-3" style="width: 18rem">
                            <img src="@item.ImageUrl" class="card-img-top" alt="..." style="height: 300px">
                            <div class="card-body">
                                <h5 class="card-title text-decoration-none">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </h5>
                                <div class="d-flex text-decoration-none">
                                    <span class="">Price: </span>
                                    <p class="mx-3">@item.Price.ToString("#,##0") Vnđ</p>
                                </div>
                                <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="productId" value="@item.Id" />
                                    <div class="d-flex">
                                        <input type="number" name="quantity" value="1" min="1" class="form-control" style="width: 60px; margin-right: 10px;" />
                                        <button class="btn btn-outline-dark">
                                            <i class="bi-cart-fill me-1"></i> Add to Cart
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</section>

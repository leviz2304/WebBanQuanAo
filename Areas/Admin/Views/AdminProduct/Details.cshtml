@model WebBanHangLapTop.Models.Product

@{
    Layout = "AdminLayout";
}

<h2>Product Details</h2>
<div>
    <h3>Price: @Model.Price</h3>
    <p>@Model.Description</p>
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="Product Image" style="max-width:200px; max-height:200px" />
    }
    @foreach (var item in ViewBag.images)
    {
        <img src="@item.Url" alt="Product Image" style="max-width:
		200px; height:300px;" class="mx-3" />
    }

</div>
<a asp-action="Index"><button type="submit" class="btn btn-danger">Back to List</button></a>

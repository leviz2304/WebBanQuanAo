@model HomePageViewModel
@{
    Layout = "_Layout";
}

<div class="container mt-3">
    <div class="row">
        <!-- Sidebar for Filters -->
        <div class="col-md-3">
            <form method="get" asp-controller="Product" asp-action="Filter">
                <!-- Categories and Brands checkboxes as shown above -->
                <h4>Categories</h4>
                @if (Model.Categories != null)
                {
                    foreach (var category in Model.Categories)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="@category.Id" id="category-@category.Id">
                            <label class="form-check-label" for="category-@category.Id">
                                @category.Name
                            </label>
                        </div>
                    }
                }
                else
                {
                    <p>No categories available.</p>
                }

                <!-- Brands -->
                <h4 class="mt-4">Brand</h4>
                @foreach (var brand in Model.Brands)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="brand-@brand.Id">
                        <label class="form-check-label" for="brand-@brand.Id">
                            @brand.BrandName
                        </label>
                    </div>
                }
                <button type="submit" class="btn btn-primary mt-3">Apply Filters</button>
            </form>
            <!-- Categories -->
            
        </div>

        <!-- Main Content Area for Products -->
        <div class="col-md-9">
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var product in Model.Products)
                {
                    <a class="text-decoration-none text-black" asp-action="Display" asp-controller="Product" asp-route-id="@product.Id">
                    <div class="col">
                        <div class="card">
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">VND @product.Price</p>
                                <!-- Other product details -->
                            </div>
                        </div>
                    </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>
